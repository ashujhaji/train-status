<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PnrStatusFragment">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:id="@+id/crdv_passenger_details"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_passenger_details_label"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:text="Passenger Details"
                android:textSize="18dp"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_passengers_label"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/tv_passenger_details_label"
                android:layout_marginTop="25dp"
                android:text="Passengers"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_booking_status_label"
                android:layout_centerInParent="true"
                android:layout_below="@+id/tv_passenger_details_label"
                android:layout_marginTop="25dp"
                android:text="Booking Status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_status_label"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_passenger_details_label"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:text="Current Status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_passengers_val"
                android:layout_below="@+id/tv_passengers_label"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:text="7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_booking_status_val"
                android:layout_below="@+id/tv_booking_status_label"
                android:layout_marginTop="4dp"
                android:layout_centerInParent="true"
                android:text="CNF/B2/30/GN"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_status_val"
                android:layout_below="@+id/tv_current_status_label"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="14dp"
                android:text="RLWL/-/12/GN"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/crdv_reservation_details"
        android:layout_below="@+id/crdv_passenger_details"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reservation_details_label"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:text="Reservation Details"
                android:textSize="18dp"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_train_name_label"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_reservation_details_label"
                android:text="Train"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_journey_class_label"
                android:layout_below="@+id/tv_train_name_label"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="Journey Class"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reservation_from"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_journey_class_label"
                android:layout_marginLeft="15dp"
                android:text="From Station"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reservation_to"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_reservation_from"
                android:layout_marginLeft="15dp"
                android:text="To Station"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_boarding_point"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_reservation_to"
                android:layout_marginLeft="15dp"
                android:text="Boarding Point"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_doj_label"
                android:layout_below="@+id/tv_boarding_point"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Date of Journey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chart_prepared_label"
                android:layout_below="@+id/tv_doj_label"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Chart Prepared"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_train_name_val"
                android:layout_below="@+id/tv_reservation_details_label"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_journey_class_val"
                android:layout_below="@+id/tv_train_name_val"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reservation_from_val"
                android:layout_below="@+id/tv_journey_class_val"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_reservation_to_val"
                android:layout_below="@+id/tv_reservation_from_val"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_boarding_point_val"
                android:layout_below="@id/tv_reservation_to_val"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_doj_val"
                android:layout_below="@+id/tv_boarding_point_val"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chart_prepared_val"
                android:layout_below="@+id/tv_doj_val"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    



</RelativeLayout>