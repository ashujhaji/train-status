<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.tnine.trainstatus.Fragments.TrainRouteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_route_head"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_train_number"
            android:layout_alignParentLeft="true"
            android:textSize="22dp"
            android:text="54412"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_train_name"
            android:layout_toRightOf="@+id/tv_route_train_number"
            android:layout_marginLeft="28dp"
            android:textSize="22dp"
            android:text="MTC-RE PASSENGER"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_runs_on_label"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:textSize="16dp"
            android:text="Runs on: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_sun"
            android:layout_toRightOf="@+id/tv_runs_on_label"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="S"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_mon"
            android:layout_toRightOf="@+id/tv_route_runs_sun"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="M"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_tue"
            android:layout_toRightOf="@+id/tv_route_runs_mon"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="T"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_wed"
            android:layout_toRightOf="@+id/tv_route_runs_tue"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="W"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_thu"
            android:layout_toRightOf="@+id/tv_route_runs_wed"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="T"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_fri"
            android:layout_toRightOf="@+id/tv_route_runs_thu"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="F"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_route_runs_sat"
            android:layout_below="@+id/tv_route_train_number"
            android:layout_toRightOf="@+id/tv_route_runs_fri"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textSize="16dp"
            android:text="S"
            />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_route_head"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route_serial_no_label"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:text="Sr."/>

            <TextView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route_station_label"
                android:layout_toRightOf="@+id/tv_route_serial_no_label"
                android:layout_marginLeft="16dp"
                android:text="Station"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route_arrival_time_label"
                android:layout_toRightOf="@+id/tv_route_station_label"
                android:layout_marginLeft="8dp"
                android:text="Arr."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route_departure_time_label"
                android:layout_toRightOf="@+id/tv_route_arrival_time_label"
                android:layout_marginLeft="15dp"
                android:text="Dep."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route_distance_label"
                android:layout_toRightOf="@+id/tv_route_departure_time_label"
                android:layout_marginLeft="15dp"
                android:text="Dist."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_route_day_label"
                android:layout_toRightOf="@+id/tv_route_distance_label"
                android:layout_marginLeft="15dp"
                android:text="Day"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_route_train_stations"
                android:layout_below="@+id/tv_route_serial_no_label"
                android:layout_margin="5dp">

            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
