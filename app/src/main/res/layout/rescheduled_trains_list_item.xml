<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingBottom="5dp"
    android:clipToPadding="false">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_train_number"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="64013"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_train_name"
                android:layout_below="@+id/tv_train_number"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:text="JIND JAKHAL PASSENGER"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_from_station"
                android:layout_below="@+id/tv_train_name"
                android:layout_marginLeft="15dp"
                android:textSize="17dp"
                android:text="HUBLI JN" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_to_station"
                android:layout_below="@+id/tv_train_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="17dp"
                android:text="BIJAPUR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_actual_time_label"
                android:layout_below="@id/tv_from_station"
                android:layout_marginLeft="15dp"
                android:text="Act. time: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_actual_time_val"
                android:layout_below="@+id/tv_from_station"
                android:layout_toRightOf="@+id/tv_actual_time_label"
                android:text="05:40"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rescheduled_time_label"
                android:layout_below="@+id/tv_from_station"
                android:layout_marginLeft="270dp"
                android:text="Resch. time: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rescheduled_time_val"
                android:layout_below="@id/tv_from_station"
                android:layout_toRightOf="@+id/tv_rescheduled_time_label"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="44:44"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rescheduled_date_label"
                android:layout_below="@+id/tv_actual_time_label"
                android:layout_marginLeft="15dp"
                android:text="Resch. date: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rescheduled_date_val"
                android:layout_below="@+id/tv_actual_time_label"
                android:layout_toRightOf="@+id/tv_rescheduled_date_label"
                android:text="03-04-2018"/>

        </RelativeLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>